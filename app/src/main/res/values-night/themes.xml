<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.V21.Night.Theme.TheMobileMovieDatabase" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="bottom_item_text_color">@color/bottom_nav_icon_active</item>
        <item name="android:textSize">15sp</item>
        <item name="movie_list_background">@color/search_background</item>
<!--        <item name="android:windowBackground">@color/windows_background_color</item>-->
        <item name="android:textColor">@color/white</item>
        <!-- It's required for text hint in SearchView  -->
        <item name="android:textColorHint">@color/search_query_hint</item>
        <item name="iconTint">@color/white</item>
        <item name="icon_tint">@color/grey_light_3</item>
<!--        &lt;!&ndash; It's required for text query in SearchView  &ndash;&gt;-->
<!--        <item name="android:textColorPrimary">@color/white</item>-->
<!--        <item name="android:textSize">15sp</item>-->
<!--        &lt;!&ndash; It's required for icon in SearchView and attributes in SettingsFragment&ndash;&gt;-->
<!--        <item name="android:textColorSecondary">@color/white</item>-->

<!--        <item name="alertDialogTheme">@style/Theme.TheMobileMovieDatabase.Preference.Dialog</item>-->
    </style>

    <style name="Base.Theme.TheMobileMovieDatabase" parent="Base.V21.Night.Theme.TheMobileMovieDatabase" />

    <style name="Theme.TheMobileMovieDatabase.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextColor">@color/white</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="Theme.TheMobileMovieDatabase.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/bottom_nav_background_dark_mode</item>
        <item name="itemIconTint">@color/bottom_nav_hint</item>
        <item name="itemTextColor">@color/bottom_nav_hint</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <style name="Theme.TheMobileMovieDatabase.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@color/search_background</item>
        <item name="queryBackground">@android:color/transparent</item>
        <item name="iconifiedByDefault">false</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="Theme.TheMobileMovieDatabase.TextView.ListMovieTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Theme.TheMobileMovieDatabase.TextView.Label" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.TheMobileMovieDatabase.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@color/black</item>
        <item name="tabIndicatorColor">@color/tab_indicator_selected</item>
        <item name="tabMode">fixed</item>
        <item name="tabIndicatorGravity">top</item>
        <item name="tabSelectedTextColor">@color/tab_text_selected</item>
        <item name="tabTextColor">@color/tab_text</item>
    </style>

    <style name="Theme.TheMobileMovieDatabase.CardView" parent="CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardBackgroundColor">@color/grey_dark_2</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="Theme.TheMobileMovieDatabase.TextView.Title" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@color/white_snow</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="Theme.TheMobileMovieDatabase.TextView.Crew" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white_snow</item>
    </style>
    <style name="Theme.TheMobileMovieDatabase.TextView.InformationText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/grey_light_3</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>
</resources>