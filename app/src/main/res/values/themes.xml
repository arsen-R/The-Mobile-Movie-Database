<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.V21.Theme.TheMobileMovieDatabase" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
<!--        <item name="android:windowLightStatusBar">true</item>-->
        <item name="bottom_item_text_color">@color/grey_dark_2</item>
        <item name="android:textSize">15sp</item>
        <item name="movie_list_background">@color/grey_light_3</item>
        <item name="icon_tint">@color/grey_dark_2</item>
    </style>

    <style name="Base.Theme.TheMobileMovieDatabase" parent="Base.V21.Theme.TheMobileMovieDatabase" />

    <style name="Theme.TheMobileMovieDatabase" parent="Base.Theme.TheMobileMovieDatabase" />

    <style name="Theme.TheMobileMovieDatabase.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Theme.TheMobileMovieDatabase.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/bottom_nav_background_light_mode</item>
        <item name="itemIconTint">@color/bottom_nav_hint</item>
        <item name="itemTextColor">@color/bottom_nav_hint</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <style name="Theme.TheMobileMovieDatabase.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@color/grey_light_3</item>
        <item name="queryBackground">@android:color/transparent</item>
        <item name="iconifiedByDefault">false</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Theme.TheMobileMovieDatabase.TextView.Label" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.TheMobileMovieDatabase.TextView.ListMovieTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.TheMobileMovieDatabase.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@color/tab_text_selected</item>
        <item name="tabIndicatorColor">@color/tab_indicator_selected</item>
        <item name="tabMode">fixed</item>
        <item name="tabIndicatorGravity">top</item>
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="tabTextColor">@color/tab_text</item>
    </style>
    <style name="Theme.TheMobileMovieDatabase.Button.Menu" parent="Widget.AppCompat.Button">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
    <style name="Theme.TheMobileMovieDatabase.CardView" parent="CardView">
        <item name="cardCornerRadius">15dp</item>
        <item name="cardBackgroundColor">@color/white_snow</item>
        <item name="android:layout_margin">5dp</item>
    </style>
    <style name="Theme.TheMobileMovieDatabase.Button.Setting" parent="Widget.AppCompat.Button">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:padding">13dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="Theme.TheMobileMovieDatabase.TextView.Title" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="Theme.TheMobileMovieDatabase.TextView.Crew" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Theme.TheMobileMovieDatabase.TextView.InformationText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>
</resources>